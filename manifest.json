{
	"manifest_version": 2,

	"name": "Reddability",
	"description": "__MSG_description__",
	"version": "1.0.0",

	"default_locale": "en",

	"content_scripts": [
		{
			"matches": ["*://*.reddit.com/*"],
			"js": ["js/jquery.js", "js/main.js"],
			"css": ["css/main.css"]
		}
	],
	"web_accessible_resources": [
		"img/favicon.ico",
		"img/arrows/arrow_*.png",
		"img/buttons/buttons.png"
	],
	"permissions": [
		"storage"
	]
}