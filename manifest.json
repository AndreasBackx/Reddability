{
	"manifest_version": 2,

	"name": "Reddability",
	"description": "__MSG_description__",
	"short_name": "__MSG_description__",
	"version": "1.0.4",
	"author": "Andreas Backx",

	"icons": {
		"128": "img/webstore/app_icon.png",
		"256": "img/webstore/app_iconx256.png"
	},

	"default_locale": "en",

	"content_scripts": [
		{
			"matches": ["*://*.reddit.com/*"],
			"js": ["js/jquery.js", "js/main.js"],
			"css": ["css/main.css"]
		}
	],
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
	"web_accessible_resources": [
		"img/buttons/arrow_*.png",
		"img/buttons/buttons.png",
		"img/buttons/markdown.png",
		"img/buttons/fullscreen.png",
		"img/buttons/mail.png",
		"img/reddit/reddit_logo.png"
	],
	"permissions": [
		"storage",
		"notifications"
	]
}
